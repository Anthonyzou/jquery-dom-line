#!/bin/bash

OUTPUT=tmp.js
TRANSMIN=lib/jquery.transform.min.js
TRANSCONDITION="if(!jQuery.cssHooks.transform)"

head -n6 jquery.line.js > $OUTPUT
uglifyjs -nc jquery.line.js >> $OUTPUT
echo "" >> $OUTPUT
#if [ ! -f $TRANSMIN ]; then
	uglifyjs lib/transform/jquery.transform.light.js | sed s/\\*\\/\(function/*\\/$TRANSCONDITION\(function/ > $TRANSMIN
#fi
cat $TRANSMIN >> $OUTPUT

mv -f $OUTPUT jquery.domline.min.js
